<%- include('partials/header'); -%>

<h1>Home</h1>
<p> <%= homeStartingContent %>
<p>
<div class="">
  <% posts.forEach(function(post){ %>
  <h1> <%= post.title %> </h1>
    <% if (post.content.length > 100){ %>
      <p> <%= post.content.slice(0, 101) + "..." %>
        <a href="/posts/<%= post.title %>">Read More</a>
      </p>
    <% } else { %>
      <p> <%= post.content %> </p>
    <% } %>
  <% }); %>
</div>


